<tc-config xmlns="http://www.terracotta.org/config"
           xmlns:ohr="http://www.terracotta.org/config/offheap-resource">

  <plugins>
    <config>
      <ohr:offheap-resources>
        <ohr:resource name="primary-server-resource" unit="GB">1</ohr:resource>   <!--1-->
        <ohr:resource name="secondary-server-resource" unit="MB">512</ohr:resource>
      </ohr:offheap-resources>
    </config>
    <config>
      <data:data-directories xmlns:data="http://www.terracottatech.com/config/data-roots">
        <data:directory name="dataroot">root1</data:directory>
      </data:data-directories>
    </config>
    <!-- tag::security[] -->
    <service>
      <security:security xmlns:security="http://www.terracottatech.com/config/security">
        <security:security-root-directory>security-root-directory</security:security-root-directory>
        <security:ssl-tls/>
      </security:security>
    </service>
    <!-- end::security[] -->
  </plugins>

  <servers>
    <server host="localhost" name="Server1">
      <logs>logs1</logs>
      <tsa-port>9510</tsa-port>
      <tsa-group-port>9530</tsa-group-port>
    </server>
  </servers>
</tc-config>

