<?xml version="1.0" encoding="UTF-8"?>
<tc:tc-config xmlns:tc="http://www.terracotta.org/config"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.terracotta.org/schema/terracotta-6.xsd">


  <servers>
    <server host="localhost" name="Server1">

      <data>./terracotta/server-%h-1/server-data</data>
      <logs>./terracotta/server-%h-1/server-logs</logs>

      <tsa-port>9510</tsa-port>
      <jmx-port>9520</jmx-port>
      <tsa-group-port>9530</tsa-group-port>
    </server>

    <server host="localhost" name="Server2">

      <data>./terracotta/server-%h-2/server-data</data>
      <logs>./terracotta/server-%h-2/server-logs</logs>

      <tsa-port>9511</tsa-port>
      <jmx-port>9521</jmx-port>
      <tsa-group-port>9531</tsa-group-port>
    </server>
  </servers>

  <clients>
    <logs>./terracotta/client-logs</logs>
  </clients>

</tc:tc-config>