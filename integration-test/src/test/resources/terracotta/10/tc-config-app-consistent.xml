<tc-config xmlns="http://www.terracotta.org/config"
           xmlns:ohr="http://www.terracotta.org/config/offheap-resource"
           xmlns:data="http://www.terracottatech.com/config/data-roots"
           xmlns:persistence="http://www.terracottatech.com/config/platform-persistence">

  <plugins>
    <config>
      <ohr:offheap-resources>
        <ohr:resource name="offheap" unit="GB">1</ohr:resource>
      </ohr:offheap-resources>
    </config>
    <config>
      <data:data-directories>
        <data:directory use-for-platform="true" name="platform">platform</data:directory>
        <data:directory name="data">data</data:directory>
      </data:data-directories>
    </config>
    <service>
      <persistence:platform-persistence data-directory-id="data"/>
    </service>
  </plugins>

  <servers>
    <server host="localhost" name="Server1">
      <logs>logs1</logs>
      <tsa-port>9410</tsa-port>
      <tsa-group-port>9430</tsa-group-port>
    </server>
    <server host="localhost" name="Server2">
      <logs>logs2</logs>
      <tsa-port>9510</tsa-port>
      <tsa-group-port>9431</tsa-group-port>
    </server>
    <server host="localhost" name="Server3">
      <logs>logs3</logs>
      <tsa-port>9610</tsa-port>
      <tsa-group-port>9432</tsa-group-port>
    </server>
  </servers>

  <failover-priority>
    <consistency>
      <voter count="0"/>
    </consistency>
  </failover-priority>
  <tc-properties>
    <property name="l2.healthcheck.l2.ping.idletime" value="2000"/>
    <property name="l2.healthcheck.l2.ping.interval" value="1000"/>
    <property name="l2.healthcheck.l2.ping.probes" value="2"/>
    <property name="l2.healthcheck.l2.socketConnectTimeout" value="2000"/>
    <property name="l2.healthcheck.l2.socketConnectCount" value="2"/>
  </tc-properties>
</tc-config>
